<div class="container">
<% if @game.winner? %>
 <div class="alert alert-info">
        <a href="http://localhost:3000" class="btn btn-xs btn-primary pull-right">New Game</a>
        <strong>GAME OVER:</strong> <%= @game.winner? %> WON!
  </div>
<% elsif @game.tie? %>
<% binding.pry %>
  <div class="alert alert-info">
        <a href="http://localhost:3000" class="btn btn-xs btn-primary pull-right">New Game</a>
        <strong>GAME OVER:</strong> IT'S A TIE!
  </div>
<% elsif @can_play %>
  <p> It's YOUR turn </p>
<% else %>
  <h3> It's <%= @game.current_symbol %>'s turn.</h>
<% end %>
</div>

