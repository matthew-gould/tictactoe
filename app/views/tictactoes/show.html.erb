<div class="container">
<% if @game.winner? %>
  <h3> Game over. <%= @game.winner? %> won.</h>
  <hr>
  <button class="btn btn-normal"><%= link_to "New Game?", new_tictactoe_path %></button>
<% elsif @can_play %>
  <p> It's YOUR turn </p>
<% else %>
  <h3> It's <%= @game.current_symbol %>'s turn.</h>
<% end %>
</div>

